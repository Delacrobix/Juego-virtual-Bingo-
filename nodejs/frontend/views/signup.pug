html(lang='en')
	head
		meta(charset='UTF-8')
		title Sign up
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		link(rel='stylesheet' href='/css/styles.css')
	body 
		div.signup
			div.signup__form
				h2 Registrarse
				form(role='form' method='POST' action='/addUser')
					input#input-user.form-control(type='text' name='username' placeholder='Username' required='required')
					input#input-email.form-control(type='email' name='email' placeholder='Email' required='required')
					input#input-password.form-control(type='password' name='password' placeholder='Password' required='required')
					button#submit-btn.btn.btn-primary.btn-block.btn-large(type='submit') Registrarse
					p.handler-login Â¿Estas registrado? 
						a(href='login')  Ingresar
					div#error-message.error-message
						if message 
							p #{message}
	script(type='text/javascript' src='/js/signup.js')
